  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": [
            "image/*",
            "video/*"
          ]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": [
      "navigate-existing",
      "auto"
    ]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "browser"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+sparkle",
      "url": "/protocol?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "image/*": [
          ".jpg",
          ".jpeg",
          ".png",
          ".gif",
          ".webp"
        ],
        "video/*": [
          ".mp4",
          ".webm",
          ".mov"
        ]
      }
    }
  ],
  "features": {
    "ai": {
      "assistant": true,
      "summarization": true,
      "translation": true
    },
    "permissions": [
      "notifications",
      "camera",
      "microphone"
    ]
  }
}
